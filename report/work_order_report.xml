<odoo>

	<report
        id="action_report_work_order"
        model="purchase.order"
        string="Surat Perintah Kerja"
        report_type="qweb-pdf"
        name="base_custom.report_workorder_document"
        file="base_custom/report/work_order_report"/>

    <template id="report_workorder_document">
        <!--<t t-call="web.external_layout">-->
            <!--<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>-->
        <t t-foreach="docs" t-as="o" >
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6">
                        <strong>Shipping address:</strong>
                        <div t-if="o.dest_address_id">
                            <div t-field="o.dest_address_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>

                        <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        <div t-field="o.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></p>
                    </div>
                </div>

                <h2>Work Order #<span t-field="o.name"/></h2>

                <div class="row mt32 mb32">
                    <div t-if="o.name" class="col-xs-3">
                        <strong>Our Order Reference:</strong>
                        <p t-field="o.name"/>
                    </div>
                    <div t-if="o.partner_ref" class="col-xs-3">
                        <strong>Your Order Reference:</strong>
                        <p t-field="o.partner_ref"/>
                    </div>
                    <div t-if="o.date_order" class="col-xs-3">
                        <strong>Order Date:</strong>
                        <p t-field="o.date_order"/>
                    </div>

                    <div t-if="o.origin" class="col-xs-3">
                        <strong>PR Reference :</strong>
                        <p t-field="o.origin"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th><strong>Description</strong></th>
                            <th><strong>Taxes</strong></th>
                            <th class="text-center"><strong>Date Req.</strong></th>
                            <th class="text-right"><strong>Qty</strong></th>
                            <th class="text-right"><strong>Unit Price</strong></th>
                            <th class="text-right"><strong>Amount</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td>
                                <span t-field="line.name"/>
                            </td>
                            <td>
                                <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.date_planned"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.product_qty"/>
                                <span t-field="line.product_uom.name" groups="product.group_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-8">
                        <strong>Says</strong>
                        <!--<p t-field="o.amount_to_text"/>-->
                        <span t-esc="o.amount_to_text(o.amount_total, o.currency_id)"/>
                    </div>
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>


                <p t-field="o.notes"/>

                <!--<p t-field="o.notes"/>-->
                <table class="table table-bordered">
                    <tr>
                        <td>
                            <div class="col-xs-12">
                                <strong>Notification</strong>
                                <p t-field="o.notes"/>
                                <strong>
                                    <p>
                                    Invoice dan Surat Jalan Asli harap dikirim ke bagian "Account Payable" PT Prasetia Juvisk Sinergi
                                    dengan mencatumkan : "Perihal : TAGIHAN", pada saat penagihan atau setelah terima PO
                                    </p>
                                </strong>
                            </div>
                        </td>
                    </tr>
                </table>
                <table class="table table-bordered">
                     <tr>
                        <td>
                            <div class="col-xs-12">
                                <strong>Alamat Faktur Pajak</strong>
                                <p>
                                    PT Prasetia Juvisk Sinergi, NPWP : 82.391.097.1-075.000
                                    JL. ANTARA GD ARUNA LT. 3 NO. 47 PASAR BARU SAWAH BESAR JAKARTA PUSAT DKI JAKARTA
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
                <div class="row" style="margin-top:70px">
                    <div class="col-xs-3">
                        <table class="table table-condensed">
                            <tr>
                                 <td style="border:0">Confirmed by Supplier</td>
                            </tr>
                            <tr>
                                 <td style="border:0">Date : </td>
                            </tr>
                            <tr>
                                <td style="text-align:center; border:0" height="80px"><!--<img t-attf-src="data:image/*;base64,{{o.create_uid.hand_signature}}" style="width:80px;height80px"/>--></td>
                            </tr>
                            <tr>
                                <td style="border:0" class="text-center">
                                    <!--<span t-field="o.create_uid.name" />-->
                                </td>
                            </tr>
                            <tr>
                                <td style="border:0">* Please Refax after Receive</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-3 pull-right">
                        <table class="table table-condensed">
                            <tr>
                                 <td style="border:0">Approved by, </td>
                            </tr>
                            <tr>
                                 <td style="border:0">Date : </td>
                            </tr>
                            <tr>
                                <td style="text-align:center; border:0" height="80px"><!--<img t-attf-src="data:image/*;base64,{{o.create_uid.hand_signature}}" style="width:80px;height80px"/>--></td>
                            </tr>
                            <tr>
                                <td class="text-center" style="border:0">ARYA SETIADHARMA</td>
                            </tr>
                            <tr class="border-black">
                                <td class="text-center">Director</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="oe_structure"/>
            </div>
        <!--</t> -->
        </t>
    </template>

    <template id="report_workorder">
        <!--<t t-call="web.html_container">-->
            <t t-foreach="docs" t-as="o">
                <t t-call="work_order.report_workorder_document" t-lang="o.partner_id.lang"/>
            </t>
        <!--</t>-->
    </template>
</odoo>
